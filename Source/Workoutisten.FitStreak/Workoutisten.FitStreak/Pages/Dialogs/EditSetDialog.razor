@using Workoutisten.FitStreak.Data.Models.Workout
@using Workoutisten.FitStreak.Shared.Exercise

<MudDialog>
    <DialogContent>
           <ExerciseSetView CardioExerciseSet="CardioSetToEdit" ExerciseCategory="ExerciseCategory" StrengthExerciseSet="StrengthSetToEdit" />
    </DialogContent>
    <DialogActions>
        <MudContainer Class="d-flex justify-center my-3 ">
            @*<MudStack Row="true" Justify="Justify.Center" AlignItems="AlignItems.Center">*@
            <FitStreakButton Label="SAVE" OnClick="Submit" />
            @*</MudStack>*@
        </MudContainer>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter]
    MudDialogInstance MudDialog { get; set; }

    [Parameter]
    public StrengthExerciseSetModel StrengthSetToEdit { get; set; }

    [Parameter]
    public CardioExerciseSetModel CardioSetToEdit { get; set; }

    [Parameter]
    public ExerciseCategoryEnum ExerciseCategory{ get; set; }

    void Cancel() => MudDialog.Cancel();

    void Submit() => MudDialog.Close(DialogResult.Ok(true));

}
