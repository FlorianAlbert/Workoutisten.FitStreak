
<MudDialog>
    <DialogContent>
        <MudText Typo="Typo.body1">Reset your Password</MudText>
        <MudText Typo="Typo.body2">We just sent you an E-Mail with an eight symbol verification code.<br/> Enter the code and your new password to get right back to your streak</MudText>
    </DialogContent>
    <DialogActions>
        <MudContainer Class="d-flex justify-center my-3 ">
            <FitStreakButton Label="Save" OnClick="Submit"/>
        </MudContainer>
    </DialogActions>
</MudDialog>

@code {

    [CascadingParameter]
    MudDialogInstance MudDialog { get; set; }

    void Submit() => MudDialog.Close(DialogResult.Ok(true));

}
