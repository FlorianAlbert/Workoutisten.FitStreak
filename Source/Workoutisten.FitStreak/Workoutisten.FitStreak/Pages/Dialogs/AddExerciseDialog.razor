
<MudDialog>
    <DialogContent>
        <MudGrid>
            <MudItem xs=12>
                <MudTextField @bind-Value="NewExercise.Name" Label="Name" Variant="Variant.Text" Clearable="true" />
            </MudItem>
            <MudItem xs="3" Class="d-flex align-center">
                <MudText Typo="Typo.h6">Type: </MudText>
            </MudItem>
            <MudItem xs="9">
                <MudRadioGroup @bind-SelectedOption="@NewExercise.Category">
                    <MudRadio Color="Color.Primary" Option="@(ExerciseCategory.Cardio)" Placement="@Placement.Bottom" Dense="true">Cardio</MudRadio>
                    <MudRadio Color="Color.Primary" Option="@(ExerciseCategory.Strength)" Placement="@Placement.Bottom" Dense="true">Strength</MudRadio>
                </MudRadioGroup>
            </MudItem>
        </MudGrid>
    </DialogContent>
    <DialogActions>
        <MudContainer Class="d-flex justify-center my-3 ">
            <MudButton Color="Color.Primary" Variant="Variant.Filled" OnClick="Submit" StartIcon="@Icons.Filled.Add"><MudText Typo="Typo.button">CREATE</MudText></MudButton>
        </MudContainer>
    </DialogActions>
</MudDialog>


@code {
    [CascadingParameter]
    MudDialogInstance MudDialog { get; set; }

    void Submit() => MudDialog.Close(DialogResult.Ok<ExerciseModel>(NewExercise));

    void Cancel() => MudDialog.Cancel();

    public ExerciseModel NewExercise { get; set; } = new ExerciseModel();
}
