@page "/signup"

@using Workoutisten.FitStreak.Converter
@using Workoutisten.FitStreak.Data.Models.User

@inject IRestClient _RestClient
@inject IConverter<RegisterModel, RegistrationRequest> _Converter

<MudStack>
    <h3>Register:</h3>
    <MudItem xs=12>
        <MudTextField @bind-Value="@registerModel.FirstName" Label="First Name" Variant="Variant.Text" Text="Enter your name" Clearable="true" />
    </MudItem>
    <MudItem xs=12>
        <MudTextField @bind-Value="@registerModel.LastName" Label="Last Name" Variant="Variant.Text" Text="Enter your name" Clearable="true" />
    </MudItem>
    <MudItem xs=12>
        <MudTextField @bind-Value="@registerModel.Email" Label="email" Variant="Variant.Text" Text="Enter your e-mail" Clearable="true" />
    </MudItem>
    <MudItem xs=12>
        <MudTextField @bind-Value="@registerModel.Password" Label="password" Variant="Variant.Text" Text="Password" Clearable="true" />
    </MudItem>
    <FitStreakButton Label="Sign Up" OnClick="SignUp_Button"/>
</MudStack>

@code {

    public RegisterModel registerModel { get; set; }

    async Task SignUp_Button()
    {
        await _RestClient.RequestPOST3Async(await _Converter.ToDto(registerModel));

    }

}
