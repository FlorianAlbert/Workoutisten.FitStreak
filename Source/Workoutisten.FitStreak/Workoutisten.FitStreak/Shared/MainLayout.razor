@inherits LayoutComponentBase
@using Microsoft.AspNetCore.Components.Authorization
@using Microsoft.Maui.Devices

<MudThemeProvider @bind-IsDarkMode="@_isDarkMode" Theme="FitStreakTheme"/>
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <AuthorizeView>
        <Authorized>
            <MudAppBar>
                <NavBar />
            </MudAppBar>
            <MudMainContent>
                <MudContainer Class="mt-2">
                    @Body
                </MudContainer>
            </MudMainContent>
        </Authorized>
        <NotAuthorized>
            <MudMainContent>
                <MudContainer Class="p-3">
                    @Body
                </MudContainer>
            </MudMainContent>
        </NotAuthorized>
    </AuthorizeView>
</MudLayout>



