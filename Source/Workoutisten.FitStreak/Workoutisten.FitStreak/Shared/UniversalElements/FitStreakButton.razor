
@if (Icon is not null)
{
    <MudButton Class="rounded-xl" Href="@Href" Color="Color.Primary" Variant="Variant.Filled" OnClick="OnClick" StartIcon="@Icon"><MudText Typo="Typo.button"><b>@Label</b></MudText></MudButton>
}
else
{
    <MudButton Class="rounded-xl" Href="@Href" Color="Color.Primary" Variant="Variant.Filled" OnClick="OnClick"><MudText Typo="Typo.button"><b>@Label</b></MudText></MudButton>
}

@code {
    [Parameter]
    public Action OnClick { get; set; }

    [Parameter]
    public string Icon { get; set; }

    [Parameter]
    public string Label { get; set; }

    [Parameter]
    public string Href { get; set; }

}
