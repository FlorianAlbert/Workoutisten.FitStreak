
@if (Icon is not null)
{
    <MudButton Color="Color.Primary" Variant="Variant.Filled" OnClick="OnClick" StartIcon="@Icon"><MudText Typo="Typo.button">@Label</MudText></MudButton>
}
else
{
    <MudButton Color="Color.Primary" Variant="Variant.Filled" OnClick="OnClick"><MudText Typo="Typo.button">@Label</MudText></MudButton>
}

@code {
    [Parameter]
    public Action OnClick { get; set; }

    [Parameter]
    public string Icon { get; set; }

    [Parameter]
    public string Label { get; set; }
}
