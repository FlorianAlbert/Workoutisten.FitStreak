
<MudListItem Avatar="@IconAttribute">
    <MudCard>
        <MudCardContent>
            <MudText>@Name</MudText>
            <MudText Typo="Typo.caption">Was machen wir hier hin?</MudText>
        </MudCardContent>
    </MudCard>
</MudListItem>
@if (!LastElement)
{
    <MudDivider />
}

@code {

    [Parameter]
    public string Name { get; set; }

    [Parameter]
    public bool LastElement { get; set; }

    [Parameter]
    public ExerciseCategory Category { get; set; }

    [Parameter]
    public MudIcon Icon { get; set; }

    private string IconAttribute
    {
        get
        {
            if (Icon is not null)
            {
                return Icon.ToString();
            }
            return Category == ExerciseCategory.Cardio ? Icons.Material.Filled.Kitesurfing : Icons.Material.Filled.FitnessCenter;
        }
    }

    

}
